{
  "manifest_version": 2,

  "name": "P.I.E.",
  "description":"Pingry Information and Essentials",
  "version": "1.0",

  "browser_action": {
    "default_title": "PIE"
  },

  "chrome_url_overrides" : {
    "newtab": "pie.html"
  },
  
  "content_security_policy": "script-src 'self' https://twitter.com https://platform.twitter.com https://cdn.api.twitter.com https://syndication.twimg.com; object-src 'self'",
  
  "icons": { 
  	"128": "PIE-128.png",
     "48": "PIE-48.png",
     "16": "PIE-16.png" },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [ "jquery.min.js"]
        }
    ]

}